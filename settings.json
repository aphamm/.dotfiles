{
  // BASICS
  // hide status bar at the bottom
  "workbench.statusBar.visible": false,
  // show nothing when no editor is opened
  "workbench.startupEditor": "none",
  // hide minified view of code on right side
  "editor.minimap.enabled": false,
  // hide file path at the top of editor
  "breadcrumbs.enabled": false,
  // ignore extension recommendations
  "extensions.ignoreRecommendations": true,
  // set custom theme + font
  "workbench.colorTheme": "Vesper",
  "custom-ui-style.font.sansSerif": "Geist Font",
  "editor.fontFamily": "Geist Font",
  // set zoom level
  "window.zoomLevel": 1,

  // SIDEBAR
  // custom icons for files and folders
  "workbench.iconTheme": "material-icon-theme",
  // hide directory arrow icons
  "material-icon-theme.hidesExplorerArrows": true,
  // set spacing for nesting levels
  "workbench.tree.indent": 16,
  // does not compress empty directories
  "explorer.compactFolders": false,
  // removes need to confirm moving files around in GUI
  "explorer.confirmDragAndDrop": false,
  // removes need to confirm deleting files in GUI
  "explorer.confirmDelete": false,

  // TITLE BAR
  "custom-ui-style.stylesheet": {
    // remove shadow of notification box in bottom right
    ".notification-toast": "box-shadow: none !important",
    // change background color of title of search when pressing slash
    ".quick-input-titlebar": "background: #100B15 !important",
    // remove shadow of find widget and round corners
    ".editor-widget.find-widget": "box-shadow: none; border-radius: 4px",
    // apply color gradient to cursor
    ".monaco-editor .cursors-layer .cursor": "background-image: linear-gradient(135deg, #ffaffc 10%, #DA70D6 100%)",

    // COMMAND PALETTE
    // remove shadow of command palette box
    ".quick-input-widget.show-file-icons": "box-shadow: none !important",
    // move command palette closer to center
    ".quick-input-widget": "top: 25vh !important",
    // hide scroll bar within command palette
    ".quick-input-list .scrollbar": "display: none",
    // remove empty blank space on the right of the command palette search bar
    ".monaco-action-bar.quick-input-inline-action-bar": "display: none",

    // TITLE BAR IN EDITOR
    // remove border at bottom of title bar in editor
    ".monaco-workbench .part.editor > .content .editor-group-container > .title.title-border-bottom:after": "display: none",
    // remove shadow of title bar in editor
    ".monaco-editor .scroll-decoration": "display: none",
    // remove editor dropdown toolbar icon in top right
    ".title-actions": "display: none !important",
    // center text in title bar of editor
    ".title.show-file-icons .label-container .monaco-icon-label.file-icon": "justify-content: center; padding: 0 !important",
    // remove error counter in title bar of editor
    ".title .monaco-icon-label:after": "margin-right: 0",

    // SIDE BAR
    // remove shadow of title in side bar
    ".monaco-scrollable-element > .shadow.top": "display: none",
    // remove title in side bar
    ".sidebar .title-label": "display:none !important",
    // remove side bar border
    ".sidebar": "border: none !important",
    // remove highlight outline for entire side bar
    ".monaco-workbench .monaco-list:not(.element-focused):focus:before": "outline: none !important",
    // remove highlight outline for individual items in side bar
    ".monaco-list-row.focused": "outline: none !important"
  },

  // EDITOR
  // set font size
  "editor.fontSize": 14,
  // enable ligatures
  "editor.fontLigatures": true,
  // set spacing between lines
  "editor.lineHeight": 1.5,
  // add multiple cursors via Command key on Mac
  "editor.multiCursorModifier": "ctrlCmd",
  // set cursor style to block
  "editor.cursorStyle": "block",
  // show relative line numbers (helpful for VIM)
  "editor.lineNumbers": "relative",
  // make font inside comments italic
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // FORMATTER
  // trim trailing whitespace after saving file
  "files.trimTrailingWhitespace": true,
  // insert new line at end of file
  "files.insertFinalNewline": true,
  // set tab size to 2 spaces
  "editor.tabSize": 2,
  // disable auto indentation detection
  "editor.detectIndentation": false,
  // enable autosave of editor
  "files.autoSave": "afterDelay",
  // format code on save
  "editor.formatOnSave": true,
  // format line after type
  "editor.formatOnType": true,
  // set editor default formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // python formatter settings
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  // rust formatter settings
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  // notebook formatter settings
  "notebook.formatOnSave.enabled": true,
  "notebook.codeActionsOnSave": {
    "notebook.source.fixAll": "explicit",
    "notebook.source.organizeImports": "explicit"
  },
  "notebook.output.fontFamily": "Andale Mono"
}
